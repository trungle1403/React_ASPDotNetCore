@{
    ViewData["Title"] = "Home Page";
}

<style type="text/css">
    @@media (min-width: 992px) {
        #mdThemMoi .modal-dialog {
            width: 40%;
        }
    }

    .fade-scale {
        transform: scale(0);
        opacity: 0;
        -webkit-transition: all .25s linear;
        -o-transition: all .25s linear;
        transition: all .25s linear;
    }

        .fade-scale.in {
            opacity: 1;
            transform: scale(1);
        }

    .offcanvas.show {
        transform: none;
    }

    .offcanvas-top {
        top: 0;
        right: 0;
        left: 0;
        height: 30vh;
        max-height: 100%;
        border-bottom: 1px solid rgba(0,0,0,.2);
        transform: translateY(-100%);
    }

    .offcanvas {
        position: fixed;
        bottom: 0;
        z-index: 1050;
        display: flex;
        flex-direction: column;
        max-width: 100%;
        visibility: hidden;
        background-color: #fff;
        background-clip: padding-box;
        outline: 0;
        transition: transform .3s ease-in-out;
        visibility: visible;
    }


    .offcanvas-end {
        top: 0;
        border-left: 0 solid transparent;
        -webkit-transform: translateX(100%);
        transform: translateX(100%);
    }

    .popover {
        max-width: 500px;
        min-width: 200px !important;
        border-radius: 3px 3px 3px 3px !important;
        background-color: white;
        font-size: 11px;
        opacity: 0.9 !important;
    }

    .popover-title {
        max-width: 500px;
        min-width: 200px !important;
        width: auto;
        margin-top: -1px !important;
        font-size: 11px;
        height: 20px;
        line-height: 5px;
        background-color: #5cb85c !important;
        color: white;
        border-top-left-radius: calc(.3rem - 1px) !important;
        border-top-right-radius: calc(.3rem - 1px) !important;
        border-bottom: 1px solid #d9dbe1;
        opacity: 0.9 !important;
    }

    .mt-10px {
        margin-top: 10px;
    }

    .box {
        border: 1px solid #d5d5d5;
        display: block;
        position: relative;
        margin: 15px 10px 10px 10px;
    }

    .box-title {
        display: inline-block;
        position: absolute;
        left: 15px;
        top: -15px;
        width: auto;
        height: 30px;
        line-height: 30px;
        text-align: center;
        background: white;
        font-weight: bold;
    }

    .box-body {
        padding: 10px 10px 0 10px;
    }
</style>
<div class="main-content">
    <div class="main-content-inner">
        <div class="page-content">
            <div class="row">
                <div class="col-md-9">
                    <button class="btn btn-sm btn-primary" id="btnThemMoi"><i class="fa fa-plus"></i>&ensp;Thêm mới</button>
                    <button class="btn btn-sm btn-success" id="btnXuatExcel"><i class="fa fa-download"></i>&ensp;Xuất Excel</button>
                </div>
                <div class="col-md-3">
                     <a href="#" id="btncauhinh" style="float: right;margin-left: 4px;" class="btn btn-default">
											<i class="ace-icon fa fa-cog"></i>									
										</a>
                    <span class="input-icon" style="float: right;">
                        <input type="text" placeholder="Nội dung tìm kiếm ..." class="nav-search-input" id="timKiem" autocomplete="off">
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
